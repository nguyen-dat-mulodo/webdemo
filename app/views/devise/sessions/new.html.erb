<div class="login-page">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'login100-form validate-form' }) do |f| %>
    <span class="login100-form-title p-b-43">
      Login to continue
    </span>

    <div class="wrap-input100 validate-input" data-validate = "Valid email is required: ex@abc.xyz">
      <%= f.email_field :email, class: "input100", autofocus: true, autocomplete: "email"  %>
      <span class="focus-input100"></span>
      <span class="label-input100">Email</span>
    </div>


    <div class="wrap-input100 validate-input" data-validate="Password is required">
      <%= f.password_field :password, class: "input100", autocomplete: "current-password"  %>
      <span class="focus-input100"></span>
      <span class="label-input100">Password</span>
    </div>

    <div class="flex-sb-m w-full p-t-3 p-b-32">
      <% if devise_mapping.rememberable? -%>
        <div class="contact100-form-checkbox">
          <%= f.check_box :remember_me, name: "remember-me", id: "ckb1", class: "input-checkbox100" %>
          <%= f.label :remember_me, for: "ckb1", class: "label-checkbox100" %>
        </div>
      <% end %>
    </div>

    <div class="container-login100-form-btn">
      <%= f.submit "Login", class: "login100-form-btn" %>
    </div>

    <%= render "devise/shared/links" %>

    <div class="text-center p-t-46 p-b-20">
      <span class="txt3">
        OR
      </span>
      <br />
      <span class="txt2">
        Sign up using
      </span>
    </div>

    <div class="login100-form-social flex-c-m">
      <a href="#" class="login100-form-social-item flex-c-m bg1 m-r-5">
        <i class="fa fa-facebook-f" aria-hidden="true"></i>
      </a>

      <a href="#" class="login100-form-social-item flex-c-m bg2 m-r-5">
        <i class="fa fa-twitter" aria-hidden="true"></i>
      </a>

      <a href="#" class="login100-form-social-item flex-c-m bg3 m-r-5">
        <i class="fa fa-google-plus" aria-hidden="true"></i>
      </a>
    </div>
  <% end %>
</div>